# 3x-ui VPN Service Environment Variables

# VPN Domain Configuration
VPN_DOMAIN=your-vpn-domain.com
ADMIN_EMAIL=admin@example.com

# Port Configuration
HTTPS_PORT=443  # Default HTTPS port

# XRay Configuration
XRAY_VMESS_AEAD_FORCED=false

# Panel Configuration 
PANEL_PATH=YourCustomPanelPath  # Custom panel access path

# JWT Configuration
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING

# XUI Panel Credentials
XUI_USERNAME=admin
XUI_PASSWORD=CHANGE_TO_SECURE_PASSWORD

# Server Configuration
SERVER_HOST=your.server.ip.address
SERVER_USER=your_ssh_username
SSH_KEY_PATH=~/.ssh/your_private_key
DEPLOY_PATH=/path/to/deployment/folder  # Path where 3x-ui is deployed on the server

# GitHub Configuration (for workflow logs check)
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_REPO=your-username/your-repo-name  # Optional, will be auto-detected from git config

# SSH Command Reference (not used by the application)
# ssh -i ~/.ssh/your_private_key your_ssh_username@your.server.ip.address

# Log Checking Configuration
LOG_RETENTION_DAYS=7  # Number of days to keep logs 